{
  "name": "assignment3",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf dist && tsc && tsc-alias && npm run copy-views && npm run copy-public",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "start:dev": "nodemon src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "copy-views": "copyfiles -u 1 src/views/**/* dist",
    "copy-public": "copyfiles -u 1 src/public/**/* dist",
    "tailwind": "npx tailwindcss -i src/public/styles/input.css -o src/public/styles/output.css --watch"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express-handlebars": "^6.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-urlrewrite": "^2.0.1",
    "formidable": "^3.5.1",
    "handlebars": "^4.7.8",
    "http-status": "^1.7.3",
    "lodash": "^4.17.21",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.4",
    "morgan": "^1.10.0",
    "tailgrids": "^2.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-urlrewrite": "^1.3.0",
    "@types/formidable": "^3.4.5",
    "@types/handlebars": "^4.1.0",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.1",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
